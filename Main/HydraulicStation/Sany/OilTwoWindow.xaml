<Window x:Class="Main.HydraulicStation.Sany.OilTwoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main.HydraulicStation.Sany"
        mc:Ignorable="d"
        Title="OilTwoWindow" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock FontSize="18" Text="铁钻工:" FontWeight="Bold" Foreground="Black"></TextBlock>
                        <TextBlock Name="tbIron" FontSize="18" Width="60" Text="8888.8"></TextBlock>
                        <TextBlock FontSize="18" Text="Mpa"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnIronOpen" FontSize="18" Width="120" Height="40" Click="btnIronOpen_Click" FontWeight="Bold">打开</Button>
                        <Button Name="btnIronClose" FontSize="18" Width="120" Height="40" Click="BtnIronClose_Click" FontWeight="Bold">关闭</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="0" Grid.Column="1">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock FontSize="18" Text="大钳:" FontWeight="Bold" Foreground="Black"></TextBlock>
                        <TextBlock Name="tbTongs" FontSize="18" Width="60" Text="8888.8"></TextBlock>
                        <TextBlock FontSize="18" Text="Mpa"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnTongsOpen" FontSize="18" Width="120" Height="40" Click="btnTongsOpen_Click" FontWeight="Bold">打开</Button>
                        <Button Name="btnTongsClose" FontSize="18" Width="120" Height="40" Click="btnTongsClose_Click" FontWeight="Bold">关闭</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" Background="#DDE0E5">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock FontSize="18" Text="钻台面:" FontWeight="Bold" Foreground="Black"></TextBlock>
                        <TextBlock Name="tbDR" FontSize="18" Width="60" Text="8888.8"></TextBlock>
                        <TextBlock FontSize="18" Text="Mpa"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnDROpen" FontSize="18" Width="120" Height="40" Click="btnDROpen_Click" FontWeight="Bold">打开</Button>
                        <Button Name="btnDRClose" FontSize="18" Width="120" Height="40" Click="btnDRClose_Click" FontWeight="Bold">关闭</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Background="#DDE0E5">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock FontSize="18" Text="缓冲臂:" FontWeight="Bold" Foreground="Black"></TextBlock>
                        <!--<TextBlock Name="tbArm" FontSize="18" Width="60" Text="8888.8"></TextBlock>
                                        <TextBlock FontSize="18" Text="Mpa"></TextBlock>-->
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnArmOpen" FontSize="18" Width="120" Height="40" Click="btnArmOpen_Click" FontWeight="Bold">打开</Button>
                        <Button Name="btnArmClose" FontSize="18" Width="120" Height="40" Click="btnArmClose_Click" FontWeight="Bold">关闭</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="2" Grid.Column="1">
                <Button FontSize="18" FontWeight="Bold" Height="50" Width="100" Click="btnClose_Click">关闭窗口</Button>
            </Border>
