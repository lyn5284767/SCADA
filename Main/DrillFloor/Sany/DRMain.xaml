<UserControl x:Class="Main.DrillFloor.DRMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Main.DrillFloor"
             xmlns:cl="http://talonzeng.com/ControlLibrary"
             xmlns:gl="clr-namespace:COM.Common;assembly=COM.Common"
             xmlns:main="clr-namespace:Main" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1024" Foreground="#525252" FontSize="14" FontFamily="微软雅黑" Background="#F5F6FA" Margin="1" Name="drFloor">
    <UserControl.Resources>
        <gl:WorkModeFlowConverter x:Key="workModeFlowCvt"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="微软雅黑"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="微软雅黑"/>
        </Style>
        <Style x:Key="ShadowBorder" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Color="Gray" Direction="20" Opacity="0.1" RenderingBias="Quality" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="20" Color="Gray" Direction="20" Opacity="0.5" RenderingBias="Quality" ShadowDepth="1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Name="cpMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*"/>
                    <ColumnDefinition Width="16*"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Background="White" CornerRadius="10" Margin="10,10,10,5">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="DarkGray" Opacity="0.4" Direction="280" ShadowDepth="0" />
                        </Border.Effect>
                    </Border>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="0.5"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Viewbox>
                                    <TextBlock Text="&#xe6af;" FontFamily="../../Font/#iconfont" FontSize="36" Foreground="#008AFF" VerticalAlignment="Center" Margin="5,10,0,10" Width="45" Height="45"></TextBlock>
                                </Viewbox>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="18">小车</TextBlock>
                                    <TextBlock FontSize="18" Name="carPos" Text="9999" Foreground="#4C80FF"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Grid.Column="1">
                                <Viewbox>
                                    <TextBlock Text="&#xe6ae;" FontFamily="../../Font/#iconfont" FontSize="36" Foreground="#008AFF" VerticalAlignment="Center" Margin="5,10,0,10" Width="45" Height="45"></TextBlock>
                                </Viewbox>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="18">手臂</TextBlock>
                                    <TextBlock FontSize="18" Text="9999" Name="armPos" Foreground="#4C80FF"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Background="Black"></Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="3" VerticalAlignment="Center" Margin="5,15,2,15" >
                                    <Image Source="../../Images/roate.png" Margin="2"></Image>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="18">回转</TextBlock>
                                    <TextBlock Name="rotatePos" FontSize="18" Text="9999" Foreground="#4C80FF"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="3" VerticalAlignment="Center" Margin="5,15,2,15">
                                    <Image Source="../../Images/finger.png" Margin="2"></Image>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="18">抓手</TextBlock>
                                    <TextBlock Text="未知" Name="gripMotor" FontSize="18" Foreground="#4C80FF"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Border Background="White" CornerRadius="10" Margin="5,10,5,5">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="DarkGray" Opacity="0.4" Direction="280" ShadowDepth="0" />
                        </Border.Effect>
                    </Border>
                    <Grid Margin="5,10,5,5">
                            <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Viewbox>
                                    <Label Margin="10,0,0,0" FontSize="18" Grid.Column="0">电机</Label>
                                </Viewbox>
                                <cl:SymbolMapping Name="drcarMotorWorkStatus" Grid.Column="1" StrContent="" Margin="5"/>
                                <cl:SymbolMapping Name="drRotateMotorWorkStatus" Grid.Column="2" StrContent="" Margin="5"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Viewbox>
                                    <Label Margin="10,0,0,0" FontSize="18">回零</Label>
                                </Viewbox>
                                <cl:SymbolMapping Name="drcarMotorRetZero" Grid.Column="1" StrContent="" Margin="5"/>
                                    <cl:SymbolMapping Name="drRotateMotorRetZero"  Grid.Column="2" StrContent="" Margin="5"/>
                                </Grid>
                                
                            </Grid>
                        </Grid>
                </Grid>
                <Grid Grid.Column="2">
                    <Border Background="White" CornerRadius="10" Margin="5,10,5,5" >
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="DarkGray" Opacity="0.4" Direction="280" ShadowDepth="0" />
                        </Border.Effect>
                    </Border>
                    
                    <Grid Margin="5,10,5,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=" 2.2*"/>
                            <RowDefinition Height=" 1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <!--<ColumnDefinition/>-->
                        </Grid.ColumnDefinitions>
                        <Viewbox>
                            <cl:BasedSwitchButton Name="SelectType" ContentLeft="钻台面" ContentDown="机械手" ContentRight="二层台" UserControlClicked="btn_SelectType" Grid.Column="0" Visibility="Collapsed"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0" >
                            <cl:BasedSwitchButton Name="droperateMode" ContentLeft="手动" ContentDown="操作模式" ContentRight="自动" UserControlClicked="btn_drOpState" Margin="5"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1">
                            <cl:BasedSwitchButton Name="drworkMode" ContentLeft="排杆" ContentDown="工作模式" ContentRight="送杆" UserControlClicked="btn_drWorkModel" Margin="5"/>
                        </Viewbox>
                        <Viewbox Grid.Column="2" >
                            <cl:BasedSwitchButton Name="drCarMoveModel" ContentLeft="左移" ContentDown="行车右移" ContentRight="右移" IsChecked="False" UserControlClicked="btn_drCarMoveModel" Margin="5"/>
                        </Viewbox>
                        <Viewbox Grid.Column="3" >
                            <cl:BasedSwitchButton Name="drTelecontrolModel" ContentLeft="司钻" ContentDown="操作" ContentRight="遥控" UserControlClicked="btn_drTelecontrolModel" Margin="5"/>
                        </Viewbox>
                        <Menu Grid.Row="1" Grid.Column="0" Background="Transparent" Height="40" Width="100"  FontSize="16" FontWeight="Bold" Foreground="#008AFF">
                            <MenuItem>
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <ContentPresenter Content="附属功能"/>
                                        <Image Margin="0,2,0,0"  Width="15" Source="..\..\Images\downTrangle.png" />
                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="目的地选择"  FontSize="24">
                                    <MenuItem Header="立根盒" Click="btn_SelectDes" TabIndex="1"/>
                                    <MenuItem Header="猫道-井口" Click="btn_SelectDes" TabIndex="2"/>
                                    <MenuItem Header="猫道-鼠洞" Click="btn_SelectDes" TabIndex="3"/>
                                </MenuItem>
                                <MenuItem Header="回零"  FontSize="24">
                                    <MenuItem Header="小车回零" Click="btn_CarToZero"/>
                                    <MenuItem Header="旋转回零" Click="btn_RotateToZero"/>
                                </MenuItem>
                                <MenuItem Header="清除钻杆" FontSize="24" Click="btnClearDrill" />
                                <MenuItem Header="设备回收" FontSize="24" Click="btnDeviceBack" />
                            </MenuItem>
                        </Menu>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="未选择目的地" Name="drDestination" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="未选择管柱类型" Name="tubeType" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        <Menu Grid.Row="1" Grid.Column="2" Background="Transparent" Height="40" Width="100"  FontSize="16" FontWeight="Bold" Foreground="#008AFF">
                            <MenuItem >
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <ContentPresenter Content="管柱选择" />
                                        <Image Margin="0,2,0,0"  Width="15" Source="..\..\Images\downTrangle.png" />
                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="钻铤"  FontSize="24">
                                    <MenuItem Header="6''钻铤" Click="btn_SelectDrillPipe"  TabIndex="60"/>
                                    <MenuItem Header="6.5''钻铤" Click="btn_SelectDrillPipe"  TabIndex="65"/>
                                    <MenuItem Header="7''钻铤" Click="btn_SelectDrillPipe"  TabIndex="70"/>
                                    <MenuItem Header="8''钻铤" Click="btn_SelectDrillPipe"  TabIndex="80"/>
                                    <MenuItem Header="9''钻铤" Click="btn_SelectDrillPipe"  TabIndex="90"/>
                                    <MenuItem Header="10''钻铤" Click="btn_SelectDrillPipe"  TabIndex="100"/>
                                    <MenuItem Header="11''钻铤" Click="btn_SelectDrillPipe"  TabIndex="110"/>
                                </MenuItem>
                                <MenuItem Header="钻杆"  FontSize="24">
                                    <MenuItem Header="3''钻杆" Click="btn_SelectDrillPipe" TabIndex="30"/>
                                    <MenuItem Header="3.5''钻杆" Click="btn_SelectDrillPipe" TabIndex="35"/>
                                    <MenuItem Header="4''钻杆" Click="btn_SelectDrillPipe" TabIndex="40"/>
                                    <MenuItem Header="4.5''钻杆" Click="btn_SelectDrillPipe" TabIndex="45"/>
                                    <MenuItem Header="5''钻杆" Click="btn_SelectDrillPipe" TabIndex="50"/>
                                    <MenuItem Header="5.5''钻杆" Click="btn_SelectDrillPipe" TabIndex="55"/>
                                </MenuItem>
                            </MenuItem>
                        </Menu>

                    </Grid>
                
                </Grid>
                <Grid Grid.Column="3">
                    <Border Background="White" CornerRadius="10" Margin="5,10,5,5">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="DarkGray" Opacity="0.4" Direction="280" ShadowDepth="0" />
                        </Border.Effect>
                    </Border>
                    <Grid Margin="5,10,5,5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>  
                            </Grid.RowDefinitions>
                           
                        </Grid>
                        <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="5" Margin="0,5,5,5" Style="{StaticResource ShadowBorder}">
                            <Viewbox>
                                <Grid>
                                    <StackPanel Orientation="Vertical" MouseDown="btn_drAllMotorRetZero" HorizontalAlignment="Center">
                                        <TextBlock FontSize="32" Foreground="#008AFF" FontWeight="Bold" Text="  0  "></TextBlock>
                                        <TextBlock>一键回零</TextBlock>
                                   </StackPanel>
                                    <TextBlock Name="tbTurnZeroHand" Text="&#xe507;" FontFamily="../../Font/#iconfont" FontSize="30" Foreground="Black" HorizontalAlignment="Center" Visibility="Collapsed"></TextBlock>
                                </Grid>
                            </Viewbox>
                        </Border>
                        <Border Background="White" BorderBrush="White" BorderThickness="1" CornerRadius="5" Margin="0,5,5,5" Grid.Row="1" Style="{StaticResource ShadowBorder}">
                            <Viewbox>
                                <Grid>
                                    <StackPanel Orientation="Vertical" MouseDown="btn_drMotorEnable" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xe61e;" FontFamily="../../Font/#iconfont" FontSize="36" Foreground="#008AFF" TextAlignment="Center" Height="42"></TextBlock>
                                        <TextBlock>电机使能</TextBlock>
                                    </StackPanel>
                                    <TextBlock Name="tbEnableHand" Text="&#xe507;" FontFamily="../../Font/#iconfont" FontSize="30" Foreground="Black" HorizontalAlignment="Center" Visibility="Collapsed"></TextBlock>
                                </Grid>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="37*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                    <Border Background="White" CornerRadius="10" Margin="5">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="DarkGray" Opacity="0.4" Direction="280" ShadowDepth="0" />
                        </Border.Effect>
                    </Border>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <!--<cl:StepControl Name="drStep" Grid.Row="0" SetpNum="7" CtrWidth="560">
                        </cl:StepControl>-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="62*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding ElementName=drworkMode,Path=IsChecked,Converter={StaticResource workModeFlowCvt}}" FontSize="16" Margin="2,0,0,0"></TextBlock>

                        <hc:StepBar Grid.Column="1" FontSize="14" Name="sbDrillDown" Grid.Row="1">
                            <hc:StepBarItem Content="送杆启动"/>
                            <hc:StepBarItem Content="台面定位"/>
                            <hc:StepBarItem Content="抓手夹紧"/>
                            <hc:StepBarItem Content="井口定位"/>
                            <hc:StepBarItem Content="井口送杆"/>
                            <hc:StepBarItem Content="手臂回位"/>
                            <hc:StepBarItem Content="送杆结束"/>
                        </hc:StepBar>
                        <hc:StepBar Grid.Column="1" FontSize="14" Name="sbDrillUp" Grid.Row="1" Visibility="Collapsed">
                            <hc:StepBarItem Content="排管启动"/>
                            <hc:StepBarItem Content="井口定位"/>
                            <hc:StepBarItem Content="井口抓杆"/>
                            <hc:StepBarItem Content="台面定位"/>
                            <hc:StepBarItem Content="抓手松开"/>
                            <hc:StepBarItem Content="手臂回位"/>
                            <hc:StepBarItem Content="台面完成"/>
                        </hc:StepBar>
                    </Grid>
                    <Grid Grid.Row="0" Name="Am" >
                            <!--<main:Amination x:Name="amination"/>-->
                        <Viewbox>
                            <main:AminationNew x:Name="aminationNew"/>
                        </Viewbox>
                    </Grid>
                    </Grid>
                
                </Grid>
            <Grid Grid.Column="1">
                <Border Background="White" CornerRadius="10" Margin="2,5,5,5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="DarkGray" Opacity="0.4" Direction="280" ShadowDepth="0" />
                    </Border.Effect>
                </Border>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <TextBlock Grid.Row="0" Name="warnOne" Margin="5" Text=""  FontSize="16" FontFamily="宋体" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#E0496D"></TextBlock>
                        <TextBlock Grid.Row="1" Name="warnTwo" Margin="5" Text=""  FontSize="16" FontFamily="宋体" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#E0496D"></TextBlock>
                        <TextBlock Grid.Row="2" Name="warnThree" Margin="5" Text=""  FontSize="24" FontFamily="宋体" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#E0496D">
                                <!--<TextBlock.Triggers>
                                    <EventTrigger RoutedEvent ="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard BeginTime="0:0:0" Duration="0:0:1" AutoReverse="False" RepeatBehavior="Forever">
                                                <ColorAnimation From="#E0496D" To="#E0AFBB" Duration="0:0:1" RepeatBehavior="Forever" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="warnThree">
                                                </ColorAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>-->
                        </TextBlock>
                    </StackPanel>
                    <Grid x:Name="gridRow1Column1" Grid.Row="1" Margin="0 5 0 0">
                        <!--<StackPanel Grid.Column="1">-->
                            <Viewbox x:Name="viewboxCameral1" Stretch="Uniform">
                                <Grid x:Name="gridCamera1">
                                    <Image Source="../../Images/camera.jpg"/>
                                </Grid>
                            </Viewbox>
                        <!--</StackPanel>-->
                    </Grid>

                    <Grid x:Name="gridRow1Column2" Grid.Row="2" Margin="0 5 0 0">
                        <!--<StackPanel Grid.Column="1">-->
                            <Viewbox x:Name="viewboxCameral2" Stretch="Uniform">
                                <Grid x:Name="gridCamera2">
                                    <Image Source="../../Images/camera.jpg"/>
                                </Grid>
                            </Viewbox>
                        <!--</StackPanel>-->
                    </Grid>
                    <!--<Grid Grid.Row="2" Margin="0 5 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="Button_4" Content="交换视频" Click="Button_CameraExchange" Width="50" Grid.Column="0">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <Image Margin="2" Source="../Images/Exchange.png"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <StackPanel Grid.Column="1">
                                <Viewbox x:Name="viewboxCameral2" Stretch="Uniform" Height="200">
                                    <Grid x:Name="gridCamera2">
                                        <Image Source="../Images/camera.jpg"/>
                                    </Grid>
                                </Viewbox>
                            </StackPanel>
                            <Button x:Name="Button_5" Content="全屏" Click="Button_CameraFullScreen" Width="50" Grid.Column="2">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <Image Margin="2" Source="..\Images\FullScreen.png"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>-->
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
