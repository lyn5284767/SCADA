<UserControl x:Class="ControlLibrary.TrackBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlLibrary"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="uc">
    <Border>
        <dxe:TrackBarEdit x:Name="trafficLightsTrackBar"  Minimum="{Binding ElementName=uc,Path=MiniValue}" Maximum="{Binding ElementName=uc,Path=MaxValue}" Value="{Binding ElementName=uc,Path=Value}" IsSnapToTickEnabled="True">
            <dxe:TrackBarEdit.TickFrequency>
                1
            </dxe:TrackBarEdit.TickFrequency>
        </dxe:TrackBarEdit>
    </Border>
</UserControl>
